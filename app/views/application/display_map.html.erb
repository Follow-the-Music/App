
<html>
  <head>
    <style>
      #map {
        height: 400px;
        width: 100%;
      }
    </style>
  </head>

  <body>
    <h3>My Google Maps Demo</h3>
 <ul>
  <%#@sessions.each do |session|%>
    <!-- if session is close to you, calculate -->
  <li><%#link_to session.name, "/jam_sessions/"+ session.id, class: "myButton"%></li>
    <%#end%>
</ul>

    <div id="map"></div>
    <script>
      function initMap() {
        var uluru = {lat: -25.363, lng: 131.044};
        var map = new google.maps.Map(document.getElementById("map"), {
          zoom: 4,
          center: uluru
        });
        var marker = new google.maps.Marker({
          position: uluru,
          map: map
        });
      }
    </script>
    <script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCLQtBuY3_NLNF4UMAv1SLrTAsQR1I7mfM&callback=initMap">
    </script>
  </body>
</html>
