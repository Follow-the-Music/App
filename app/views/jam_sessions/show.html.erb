<p id="notice"><%= notice %></p>
<style>
  body{
    background-image: url('<%= asset_path("jam.jpg")%>');
    background-repeat: repeat;
  }

  .jam{
    color: black;
    background-color: #F8F8FF;
    text-align:center;
  }
  h1{
    font-family: "Rockwell Extra Bold", "Rockwell Bold", monospace;
    font-size: 40px;
    font-style: normal;
    font-variant: normal;
    font-weight: 500;
    line-height: 26.4px;
    text-align:center;
  }
</style>
<div class="jam">
  <br>
<h1><strong><%=@jam_session.name%></strong></h1>
<br>
<p>
  <strong>Host:</strong>
  <%= @name[0]%>
</p>

<p>
  <strong>Number of players:</strong>
  <%=  @jam_players_count  %> / <%=@jam_session.max_players%>
</p>

<p>
  <strong>Number of listeners:</strong>
  <%= @jam_listeners_count  %> / <%=@jam_session.max_listeners%>
</p>
<table align="center",style="text-align:center;">
  <thead>
    <tr>
      <th style="text-align:center;">Participants</th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<p>
  <strong>Description:</strong>
  <%= @jam_session.description %>
</p>


<br><br>
<%= link_to 'Edit', edit_jam_session_path(@jam_session) %> |
<%= link_to 'Back', display_map_path %>
<br><br>
</div>

</body>
